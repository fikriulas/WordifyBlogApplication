@model AdminEditCategoryBlog
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form asp-controller="Category" asp-action="Edit" method="post">
    <div class="card shadow mb-4 mx-2">

        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Category List</h6>
            <div class="dropdown no-arrow">
                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                </a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <tr>
                    <th>ID</th>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>
                        <div class="form-group">
                            <input type="hidden" value="@Model.Id" />
                            <input asp-for="Name" class="form-control" />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <card class="card-footer">
            <button class="btn btn-primary" data-toggle="modal" data-target="#addCategoryModal">Save</button>
        </card>
    </div>
</form>
<div class="card shadow mb-4 mx-2">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Product List Of <u>@Model.Name</u></h6>
        <div class="dropdown no-arrow">
            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
            </a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Is Approved</th>
                <th>Is Home</th>
                <th>Is Slider</th>
            </tr>
            @if (Model.Blogs.Count() == 0)
            {
                <tr>
                    <td colspan="5" align="center">There is nothing Blog here.</td>
                </tr>
            }
            else
            {
                @foreach (var blog in Model.Blogs)
                {
                    <tr>
                        <td>@blog.Id</td>
                        <td>@blog.Title</td>
                        <td><span class="badge @(blog.IsAppproved == true ? " badge-success" : "badge-danger" )">@blog.IsAppproved</span></td>
                        <td><span class="badge @(blog.IsHome == true ? " badge-success" : "badge-danger" )">@blog.IsHome</span></td>
                        <td><span class="badge @(blog.IsSlider == true ? " badge-success" : "badge-danger" )">@blog.IsSlider</span></td>
                    </tr>
                }
            }

        </table>
    </div>
    <card class="card-footer">

    </card>
</div>
